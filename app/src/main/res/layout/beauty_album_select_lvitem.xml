<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/iv_album_select_album_frontCover"
        android:layout_width="@dimen/beauty_select_album_image_width"
        android:layout_height="@dimen/beauty_select_album_image_height"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_album_select_album_frontCover"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_album_select_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:textSize="@dimen/beauty_select_album_name_size" />

        <TextView
            android:id="@+id/tv_album_select_album_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="35å¼ "
            android:textSize="@dimen/beauty_select_album_number_size" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp"
        android:src="@mipmap/beauty_album_select_lvitem_bg" />
</RelativeLayout>